<UserControl x:Class="Lemoo.App.Controls.Chrome.MainTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Lemoo.App.Models;assembly=Lemoo.App"
             xmlns:local="clr-namespace:Lemoo.App.Controls.Chrome"
             xmlns:converters="clr-namespace:Lemoo.App.Converters"
             mc:Ignorable="d"
             Height="32">
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        
        <!-- 菜单样式 - 现代风格 -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <!-- 主菜单项样式 - 现代风格 -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#EEEEEE" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Icon" Value="{x:Null}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,1">
                            <Border.Background>
                                <SolidColorBrush Color="Transparent" />
                            </Border.Background>
                            <Grid>
                                <ContentPresenter Content="{TemplateBinding Header}"
                                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                  VerticalAlignment="Center" />
                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       HorizontalOffset="0"
                                       VerticalOffset="0"
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       PopupAnimation="Fade">
                                    <Border Background="#2A2F36"
                                            BorderBrush="#3A3F46"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="2">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black"
                                                              Opacity="0.3"
                                                              BlurRadius="12"
                                                              ShadowDepth="4"
                                                              Direction="270" />
                                        </Border.Effect>
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Cycle"
                                                        Grid.IsSharedSizeScope="True"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        KeyboardNavigation.TabNavigation="Cycle" />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="#333b46"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="Transparent"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="#00ADB5"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="Transparent"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 子菜单样式 - 现代风格 -->
        <Style x:Key="SubmenuStyle" TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,1">
                            <Border.Background>
                                <SolidColorBrush Color="Transparent" />
                            </Border.Background>
                            <Grid>
                                <ContentPresenter Content="{TemplateBinding Header}"
                                                  ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Stretch" />
                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Right"
                                       HorizontalOffset="0"
                                       VerticalOffset="0"
                                       IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                       PopupAnimation="Fade">
                                    <Border Background="#2A2F36"
                                            BorderBrush="#3A3F46"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="2">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black"
                                                              Opacity="0.3"
                                                              BlurRadius="12"
                                                              ShadowDepth="4"
                                                              Direction="270" />
                                        </Border.Effect>
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Cycle"
                                                        Grid.IsSharedSizeScope="True"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                        KeyboardNavigation.TabNavigation="Cycle" />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="#333b46"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="Transparent"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="#00ADB5"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                           To="Transparent"
                                                           Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 分隔符样式 - 现代风格 -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#3A3F46" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="10,6" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>

        <!-- 弹出菜单样式 - 现代风格 -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="#2A2F36"
                                BorderBrush="#3A3F46"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="2">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  Opacity="0.3"
                                                  BlurRadius="12"
                                                  ShadowDepth="4"
                                                  Direction="270" />
                            </Border.Effect>
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="MenuItem" BasedOn="{StaticResource SubmenuStyle}">
                        <Setter Property="Header" Value="{Binding}" />
                        <Setter Property="ItemsSource" Value="{Binding Children}" />
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   Foreground="#EEEEEE"
                                                   Background="Transparent"
                                                   VerticalAlignment="Center"
                                                   Width="16"
                                                   TextAlignment="Center"
                                                   Margin="0,0,8,0"
                                                   Visibility="{Binding Icon, Converter={StaticResource StringToVisibilityConverter}}" />
                                        <TextBlock Text="{Binding Header}"
                                                   Foreground="#EEEEEE"
                                                   Background="Transparent"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ItemContainerStyle">
                            <Setter.Value>
                                <Style TargetType="MenuItem" BasedOn="{StaticResource SubmenuStyle}">
                                    <Setter Property="Header" Value="{Binding}" />
                                    <Setter Property="ItemsSource" Value="{Binding Children}" />
                                    <Setter Property="HeaderTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Icon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="#EEEEEE"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center"
                                                               Width="16"
                                                               TextAlignment="Center"
                                                               Margin="0,0,8,0"
                                                               Visibility="{Binding Icon, Converter={StaticResource StringToVisibilityConverter}}" />
                                                    <TextBlock Text="{Binding Header}"
                                                               Foreground="#EEEEEE"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#222831"
            BorderThickness="0">
        <Grid Margin="8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="pack://application:,,,/Assets/Images/Lemoo_Logo.jpeg"
                   Width="24"
                   Height="24"
                   Stretch="UniformToFill"
                   VerticalAlignment="Center">
                <Image.Clip>
                    <RectangleGeometry Rect="0,0,24,24" RadiusX="5" RadiusY="5" />
                </Image.Clip>
            </Image>

            <!-- 标题和菜单 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Lemoo" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0" />

                <Menu VerticalAlignment="Center" 
                      Background="Transparent" 
                      Foreground="White"
                      ItemsSource="{Binding MenuItems}">
                    <Menu.ItemContainerStyle>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                            <Setter Property="Header" Value="{Binding}" />
                            <Setter Property="ItemsSource" Value="{Binding Children}" />
                            <EventSetter Event="Click" Handler="MenuItem_Click" />
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Header}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ItemContainerStyle">
                                <Setter.Value>
                                    <Style TargetType="MenuItem" BasedOn="{StaticResource SubmenuStyle}">
                                        <Setter Property="Header" Value="{Binding}" />
                                        <Setter Property="ItemsSource" Value="{Binding Children}" />
                                        <EventSetter Event="Click" Handler="MenuItem_Click" />
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Icon}"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="14"
                                                                   Foreground="#EEEEEE"
                                                                   Background="Transparent"
                                                                   VerticalAlignment="Center"
                                                                   Width="16"
                                                                   TextAlignment="Center"
                                                                   Margin="0,0,8,0"
                                                                   Visibility="{Binding Icon, Converter={StaticResource StringToVisibilityConverter}}" />
                                                        <TextBlock Text="{Binding Header}"
                                                                   Foreground="#EEEEEE"
                                                                   Background="Transparent"
                                                                   VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="ItemContainerStyle">
                                            <Setter.Value>
                                                <Style TargetType="MenuItem" BasedOn="{StaticResource SubmenuStyle}">
                                                    <Setter Property="Header" Value="{Binding}" />
                                                    <Setter Property="ItemsSource" Value="{Binding Children}" />
                                                    <EventSetter Event="Click" Handler="MenuItem_Click" />
                                                    <Setter Property="HeaderTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Icon}"
                                                                               FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="14"
                                                                               Foreground="#EEEEEE"
                                                                               Background="Transparent"
                                                                               VerticalAlignment="Center"
                                                                               Width="16"
                                                                               TextAlignment="Center"
                                                                               Margin="0,0,8,0"
                                                                               Visibility="{Binding Icon, Converter={StaticResource StringToVisibilityConverter}}" />
                                                                    <TextBlock Text="{Binding Header}"
                                                                               Foreground="#EEEEEE"
                                                                               Background="Transparent"
                                                                               VerticalAlignment="Center" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Menu.ItemContainerStyle>
                </Menu>
            </StackPanel>

            <!-- 占位（用于拖动区域） -->
            <Grid Grid.Column="2" />

            <!-- 系统按钮 -->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal"
                        VerticalAlignment="Stretch">
                <Button x:Name="MinButton"
                        Width="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MinButton_Click"
                        ToolTip="最小化">
                    <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" Foreground="White" />
                </Button>
                <Button x:Name="MaxRestoreButton"
                        Width="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MaxRestoreButton_Click"
                        ToolTip="最大化/还原">
                    <TextBlock x:Name="MaxRestoreIcon"
                               Text="&#xE922;"
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="White" />
                </Button>
                <Button x:Name="CloseButton"
                        Width="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        ToolTip="关闭">
                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Foreground="White" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>


